	padding-left:3px;  
	padding-right:3px; 
	padding-top:3px; 
	padding-bottom:3px;
	position: relative;	
	
}

.menulist a {
	color: black;
	display: block;	
	padding-left:10px;  
	padding-right:10px; 
	padding-top:10px; 
	padding-bottom:10px;  
	text-decoration: none;
}
.menulist a:hover {background-color: #DFEFFF;}

.togglebtn {
	background-color: #6699ff;  
	border-width: 0;
	color: black;
	display: block;	
	font-family:標楷體;
	font-size: 16px;
	min-width: 125px;
	padding-left:10px;  
	padding-right:10px; 
	padding-top:10px; 
	padding-bottom:10px;
	text-decoration: none;	
}
.togglebtn:hover {color: #FFFF77;}
</style>
</head>
<body style="background:#6699ff">
<table id="tblMenu" border="0" cellpadding="0" cellspacing="0" width="100%">
<tr align="center"><td>
	<div onmouseover="myMenuMouseOverFunc('menubtn_people', 'menulist_people')" onmouseleave="myMenuMouseLeaveFunc('menubtn_people', 'menulist_people')">
		<button class="menubtn" id="menubtn_people" onclick="myMenubtnClickFunc('menubtn_people', 'menulist_people')">人員進出</button>
		<div class="menulist" id="menulist_people">
			<a href="people/rapidly.asp" target="body">快速登入</a>
			<a href="people/people.asp?IO=I" target="body">人員登入</a>
			<a href="people/today.asp" target="body">今日紀錄</a>
			<a href="people/history.asp" target="body">歷史查詢</a>						
			<a href="Config/Config.asp?which=people" target="body">系統設定</a>			
			<a href="file://10.6.1.11/d/機房行政/門禁資料/授權人員名單.xlsx" target="body">授權清冊</a>
			<a href="file://10.6.1.11/d/機房行政/門禁資料/進場名單_revised.xls" target="body">進場名單</a>
